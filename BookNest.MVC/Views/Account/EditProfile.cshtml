@model BookNest.MVC.ViewModels.EditProfileVM

@{
    ViewData["Title"] = "Edit Profile";
}

<style>
    :root {
        --primary-gold: #9D7B48;
        --text-dark: #4A3C2A;
        --text-light: #A39683;
        --input-bg: #EFEBD7;
        --danger: #D93838;
        --success: #2E7D32;
    }

    .edit-profile-container {
        max-width: 600px;
        margin: 40px auto;
        padding: 40px;
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .form-title {
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 30px;
        color: var(--text-dark);
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-group label {
        display: block;
        font-weight: 600;
        margin-bottom: 8px;
        color: var(--text-dark);
    }

    .form-group input[type="text"],
    .form-group input[type="email"],
    .form-group textarea,
    .form-group input[type="file"] {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid var(--input-bg);
        border-radius: 8px;
        font-size: 14px;
        font-family: inherit;
        transition: border-color 0.3s ease;
    }

    .form-group input:focus,
    .form-group textarea:focus {
        outline: none;
        border-color: var(--primary-gold);
        box-shadow: 0 0 0 3px rgba(157, 123, 72, 0.1);
    }

    .form-group textarea {
        resize: vertical;
        min-height: 100px;
    }

    .checkbox-group {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .checkbox-group input[type="checkbox"] {
        width: 20px;
        height: 20px;
        accent-color: var(--primary-gold);
        cursor: pointer;
    }

    .checkbox-group label {
        margin: 0;
        cursor: pointer;
        font-weight: 500;
    }

    .image-preview {
        margin-top: 15px;
        padding: 15px;
        background: var(--input-bg);
        border-radius: 8px;
        text-align: center;
    }

    .image-preview img {
        max-width: 150px;
        max-height: 150px;
        border-radius: 8px;
        margin-bottom: 10px;
    }

    .image-preview-text {
        font-size: 12px;
        color: var(--text-light);
    }

    .form-actions {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 12px;
        margin-top: 30px;
    }

    .btn {
        padding: 12px 20px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        cursor: pointer;
        border: none;
        transition: all 0.3s ease;
        text-align: center;
    }

    .btn-primary {
        background: var(--primary-gold);
        color: white;
        grid-column: 1 / -1;
    }

    .btn-primary:hover {
        opacity: 0.9;
        transform: translateY(-2px);
    }

    .btn-secondary {
        background: var(--input-bg);
        color: var(--text-dark);
    }

    .btn-secondary:hover {
        background: #ddd;
    }

    .validation-error {
        color: var(--danger);
        font-size: 12px;
        margin-top: 5px;
    }

    .alert {
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .alert-success {
        background: rgba(46, 125, 50, 0.1);
        color: var(--success);
        border-left: 4px solid var(--success);
    }

    .alert-danger {
        background: rgba(217, 56, 56, 0.1);
        color: var(--danger);
        border-left: 4px solid var(--danger);
    }
</style>

<div class="edit-profile-container">
    
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            <span>@TempData["Success"]</span>
            <button onclick="this.parentElement.style.display='none';" style="background: none; border: none; color: var(--success); font-size: 18px; cursor: pointer;">✕</button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            <span>@TempData["Error"]</span>
            <button onclick="this.parentElement.style.display='none';" style="background: none; border: none; color: var(--danger); font-size: 18px; cursor: pointer;">✕</button>
        </div>
    }

    <h1 class="form-title">Edit Your Profile</h1>

    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <label asp-for="FullName">Full Name</label>
            <input asp-for="FullName" type="text" required>
            <span asp-validation-for="FullName" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="email" required>
            <span asp-validation-for="Email" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Bio">Bio (Optional)</label>
            <textarea asp-for="Bio" placeholder="Tell us about yourself..."></textarea>
            <span asp-validation-for="Bio" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProfileImage">Profile Picture</label>
            <input asp-for="ProfileImage" type="file" accept="image/*">
            <span asp-validation-for="ProfileImage" class="validation-error"></span>
            
            @if (!string.IsNullOrEmpty(Model.CurrentProfileImageUrl))
            {
                <div class="image-preview">
                    <img src="~/uploads/profiles/@Model.CurrentProfileImageUrl" alt="Current Profile">
                    <p class="image-preview-text">Current profile picture (will be replaced if you upload a new one)</p>
                </div>
            }
        </div>

        <div class="form-group">
            <div class="checkbox-group">
                <input asp-for="IsProfilePublic" type="checkbox">
                <label asp-for="IsProfilePublic">Make my profile public</label>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-controller="Account" asp-action="Profile" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>