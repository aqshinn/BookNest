@model BookNest.MVC.ViewModels.ChangePasswordVM

@{
    ViewData["Title"] = "Change Password";
}

<style>
    :root {
        --primary-gold: #9D7B48;
        --text-dark: #4A3C2A;
        --input-bg: #EFEBD7;
        --danger: #D93838;
    }

    .change-password-container {
        max-width: 500px;
        margin: 40px auto;
        padding: 40px;
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .form-title {
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 30px;
        color: var(--text-dark);
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-group label {
        display: block;
        font-weight: 600;
        margin-bottom: 8px;
        color: var(--text-dark);
    }

    .form-group input[type="password"] {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid var(--input-bg);
        border-radius: 8px;
        font-size: 14px;
        transition: border-color 0.3s ease;
    }

    .form-group input:focus {
        outline: none;
        border-color: var(--primary-gold);
        box-shadow: 0 0 0 3px rgba(157, 123, 72, 0.1);
    }

    .password-requirements {
        background: var(--input-bg);
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        font-size: 13px;
        color: var(--text-dark);
    }

    .password-requirements ul {
        margin: 10px 0 0 20px;
        padding: 0;
    }

    .password-requirements li {
        margin-bottom: 5px;
    }

    .form-actions {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 12px;
        margin-top: 30px;
    }

    .btn {
        padding: 12px 20px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        cursor: pointer;
        border: none;
        transition: all 0.3s ease;
        text-align: center;
    }

    .btn-primary {
        background: var(--primary-gold);
        color: white;
        grid-column: 1 / -1;
    }

    .btn-primary:hover {
        opacity: 0.9;
        transform: translateY(-2px);
    }

    .btn-secondary {
        background: var(--input-bg);
        color: var(--text-dark);
    }

    .btn-secondary:hover {
        background: #ddd;
    }

    .validation-error {
        color: var(--danger);
        font-size: 12px;
        margin-top: 5px;
    }
</style>

<div class="change-password-container">
    <h1 class="form-title">Change Password</h1>

    <div asp-validation-summary="ModelOnly"></div>

    <form method="post">
        <div class="form-group">
            <label asp-for="CurrentPassword">Current Password</label>
            <input asp-for="CurrentPassword" type="password" required>
            <span asp-validation-for="CurrentPassword" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="NewPassword">New Password</label>
            <input asp-for="NewPassword" type="password" required>
            <span asp-validation-for="NewPassword" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword">Confirm New Password</label>
            <input asp-for="ConfirmPassword" type="password" required>
            <span asp-validation-for="ConfirmPassword" class="validation-error"></span>
        </div>

        <div class="password-requirements">
            <strong>Password Requirements:</strong>
            <ul>
                <li>At least 8 characters long</li>
                <li>Contains uppercase letter (A-Z)</li>
                <li>Contains lowercase letter (a-z)</li>
                <li>Contains number (0-9)</li>
            </ul>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Update Password</button>
            <a asp-controller="Account" asp-action="Profile" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>