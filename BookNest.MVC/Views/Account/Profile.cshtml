@model BookNest.MVC.ViewModels.ProfileVM

@{
    ViewData["Title"] = "My Profile";
}

<style>
    :root {
        --primary-gold: #9D7B48;
        --text-dark: #4A3C2A;
        --text-light: #A39683;
        --bg-light: #F8F6EE;
        --input-bg: #EFEBD7;
        --danger: #D93838;
        --success: #2E7D32;
    }

    .profile-container {
        max-width: 600px;
        margin: 40px auto;
        padding: 40px;
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .profile-header {
        text-align: center;
        margin-bottom: 40px;
        padding-bottom: 30px;
        border-bottom: 2px solid var(--input-bg);
    }

    .profile-image {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        margin: 0 auto 20px;
        background: var(--input-bg);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 48px;
        font-weight: bold;
        color: var(--primary-gold);
        overflow: hidden;
        border: 3px solid var(--primary-gold);
    }

    .profile-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .profile-name {
        font-size: 28px;
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: 5px;
    }

    .profile-username {
        font-size: 14px;
        color: var(--text-light);
        margin-bottom: 15px;
    }

    .profile-badge {
        display: inline-block;
        padding: 6px 12px;
        background: var(--primary-gold);
        color: white;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
    }

    .profile-info {
        margin-bottom: 30px;
    }

    .info-row {
        display: flex;
        margin-bottom: 15px;
        padding-bottom: 15px;
        border-bottom: 1px solid var(--input-bg);
    }

    .info-label {
        font-weight: 600;
        color: var(--text-dark);
        width: 120px;
    }

    .info-value {
        color: var(--text-light);
        flex: 1;
    }

    .profile-actions {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 12px;
        margin-top: 30px;
    }

    .btn {
        padding: 12px 20px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        cursor: pointer;
        border: none;
        transition: all 0.3s ease;
        text-align: center;
    }

    .btn-primary {
        background: var(--primary-gold);
        color: white;
    }

    .btn-primary:hover {
        opacity: 0.9;
        transform: translateY(-2px);
    }

    .btn-secondary {
        background: var(--input-bg);
        color: var(--text-dark);
        border: 2px solid var(--primary-gold);
    }

    .btn-secondary:hover {
        background: var(--primary-gold);
        color: white;
    }

    .btn-danger {
        background: var(--danger);
        color: white;
        grid-column: 1 / -1;
    }

    .btn-danger:hover {
        opacity: 0.9;
    }

    .alert {
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .alert-success {
        background: rgba(46, 125, 50, 0.1);
        color: var(--success);
        border-left: 4px solid var(--success);
    }

    .alert-danger {
        background: rgba(217, 56, 56, 0.1);
        color: var(--danger);
        border-left: 4px solid var(--danger);
    }

    .created-date {
        font-size: 12px;
        color: var(--text-light);
        text-align: center;
        margin-top: 20px;
        padding-top: 20px;
        border-top: 1px solid var(--input-bg);
    }
</style>

<div class="profile-container">
    
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            <span>@TempData["Success"]</span>
            <button onclick="this.parentElement.style.display='none';">âœ•</button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            <span>@TempData["Error"]</span>
            <button onclick="this.parentElement.style.display='none';">âœ•</button>
        </div>
    }

    <div class="profile-header">
        <div class="profile-image">
            @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
            {
                <img src="~/uploads/profiles/@Model.ProfileImageUrl" alt="Profile">
            }
            else
            {
                @string.Join("", Model.FullName.Split(' ', StringSplitOptions.RemoveEmptyEntries).Take(2).Select(n => n[0]))
            }
        </div>
        
        <div class="profile-name">@Model.FullName</div>
        <div class="profile-username">@Model.UserName</div>
        
        @if (Model.IsProfilePublic)
        {
            <span class="profile-badge">âœ“ Public Profile</span>
        }
        else
        {
            <span class="profile-badge">ðŸ”’ Private Profile</span>
        }
    </div>

    <div class="profile-info">
        <div class="info-row">
            <div class="info-label">Email</div>
            <div class="info-value">@Model.Email</div>
        </div>

        <div class="info-row">
            <div class="info-label">Bio</div>
            <div class="info-value">@(string.IsNullOrEmpty(Model.Bio) ? "No bio added yet" : Model.Bio)</div>
        </div>

        <div class="info-row">
            <div class="info-label">Member Since</div>
            <div class="info-value">@Model.CreatedDate.ToString("MMMM dd, yyyy")</div>
        </div>
    </div>

    <div class="profile-actions">
        <a asp-controller="Account" asp-action="EditProfile" class="btn btn-primary">Edit Profile</a>
        <a asp-controller="Account" asp-action="ChangePassword" class="btn btn-secondary">Change Password</a>
        
        <form asp-controller="Account" asp-action="DeleteAccount" method="post" style="grid-column: 1 / -1;">
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure? This action cannot be undone.');">Delete Account</button>
        </form>
    </div>

    <div class="created-date">
        Account ID: @Model.Id
    </div>
</div>