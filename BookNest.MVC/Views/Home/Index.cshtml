@{
    ViewData["Title"] = "Home Page";
}

<section class="welcome-section">
    <h1>Welcome to BookNest</h1>
    <p>Meet your favorite book, find your reading community, and manage your reading life.</p>
</section>

<section>
    <div class="section-header">
        <h2>Popular now</h2>
    </div>
    @await Component.InvokeAsync("FeaturedBooks")
</section>

<section class="trending-container">
    <div class="section-header">
        <h2>Trending this week</h2>
    </div>
    <div class="trending-card">
        <div class="trending-cover" style="position: relative;">
            <img src="https://m.media-amazon.com/images/I/61r-WomIz0L._AC_UF1000,1000_QL80_.jpg" alt="Sands of Eppia">
            <div class="heart-icon red" style="bottom: 10px; right: 10px;">♥</div>
        </div>
        <div class="trending-info">
            <h3>Sands of Eppla - Book 1</h3>
            <div class="author">Janeal Falor</div>
            <div class="stars">★★★★★</div>
            <p>Cassandra lives in a world where you fall in love at first sight—or not at all. Too bad she's blind, and being blind makes her not only immune to love, but also a criminal...</p>
            <div class="trending-actions">
                <div>Read more ↗</div>
                <div style="color: #666; font-size: 12px; font-weight: 500;">👁 Preview Book</div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="section-header">
        <h2>Recommendation</h2>
        <a href="#" class="more-link">More</a>
    </div>
    @await Component.InvokeAsync("NewArrivals")
</section>