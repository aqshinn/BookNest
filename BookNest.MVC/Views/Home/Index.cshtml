@{
    ViewData["Title"] = "Home Page";
}
<div class="jumbotron p-5 mb-4 rounded-3 shadow-sm hero-section position-relative overflow-hidden">
    <div class="hero-bg" style="background-image: url('https://images.unsplash.com/photo-1507842217121-9e96e47b86aa?q=80&w=2670&auto=format&fit=crop');"></div>

    <div class="hero-overlay"></div>

    <div class="container-fluid py-5 text-center position-relative" style="z-index: 2;">
        <h1 class="display-4 fw-bold text-white mb-3">Welcome to BookNest!</h1>
        <p class="col-md-8 fs-5 mx-auto text-light opacity-75 mb-4">
            Find the perfect book to read, leave reviews, and join our community.
        </p>
        <button class="btn btn-letterboxd btn-lg px-4 py-2">Explore Books</button>
    </div>
</div>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3 mt-5">
        <h3 class="fw-bold">🔥 Featured Books</h3>
        <a href="#" class="text-decoration-none">View All &rarr;</a>
    </div>

    @await Component.InvokeAsync("FeaturedBooks")

    <hr class="my-5" />

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold">✨ New Arrivals</h3>
        <a href="#" class="text-decoration-none">View All &rarr;</a>
    </div>

    @await Component.InvokeAsync("NewArrivals")
</div>