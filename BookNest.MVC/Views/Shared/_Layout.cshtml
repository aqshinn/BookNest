@using Microsoft.AspNetCore.Identity
@using BookNest.Core.Entities
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookNest</title>

    <link href="~/admin/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>

    <div class="container">
        <nav class="navbar">
            <a asp-controller="Home" asp-action="Index" class="logo">booknest</a>

            <div class="search-container">
                <input type="text" placeholder="Search book name, author,...">
            </div>

            <div class="nav-links">
                <a asp-controller="Home" asp-action="Index" class="active"><span class="nav-icons">🏠</span> Home</a>
                <a href="#"><span class="nav-icons">📚</span> Book Shelf</a>
                <a href="#"><span class="nav-icons">👥</span> Community</a>
                <a href="#"><span class="nav-icons">🧭</span> Browse</a>
            </div>

            <div class="profile-section" style="display: flex; gap: 15px; align-items: center;">
                @if (SignInManager.IsSignedIn(User))
                {
                    // Daxil olan istifadəçini tapırıq
                    var currentUser = await UserManager.GetUserAsync(User);
                    var fullName = currentUser?.FullName ?? "User";

                    // Adın və Soyadın ilk hərflərini götürürük (Məs: "Ali Vəliyev" -> "AV")
                    var initials = string.Join("", fullName.Split(' ', StringSplitOptions.RemoveEmptyEntries).Take(2).Select(n => n[0])).ToUpper();

                    <div style="width: 35px; height: 35px; border-radius: 50%; background: var(--primary-gold); display: flex; align-items: center; justify-content: center; color: white; font-weight: bold;" title="@fullName">
                        @initials
                    </div>

                    <a asp-controller="Account" asp-action="Logout" style="padding: 6px 15px; border-radius: 20px; font-size: 13px; font-weight: 500; text-decoration: none; border: 1px solid var(--text-dark); color: var(--text-dark);">Logout</a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" style="font-weight: 600; font-size: 14px; color: var(--text-dark); text-decoration: none;">Sign In</a>
                    <a asp-controller="Account" asp-action="Register" style="background: #5C4B33; color: white; padding: 8px 18px; border-radius: 20px; font-size: 14px; text-decoration: none;">Sign Up</a>
                }
            </div>
        </nav>

        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            <div class="footer-grid">
                <div class="footer-col">
                    <h4>Company</h4>
                    <ul>
                        <li>About Us</li>
                        <li>Career</li>
                        <li>Terms</li>
                        <li>Privacy</li>
                        <li>Internet based Ads</li>
                        <li>Ad Preference</li>
                        <li>Help</li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>Work with us</h4>
                    <ul>
                        <li>Authors</li>
                        <li>Advertise</li>
                        <li>Authors & Ads Blog</li>
                        <li>API</li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>Connect</h4>
                    <div class="social-links">
                        <span>FB</span><span>TW</span><span>IG</span><span>IN</span>
                    </div>
                </div>
                <div class="footer-col">
                    <div class="app-buttons">
                        <div style="margin-bottom: 10px;">App Store</div>
                        <div>Google Play</div>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                &copy; 2026 BookNest, Inc.
            </div>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>