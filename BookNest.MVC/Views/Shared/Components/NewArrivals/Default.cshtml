@model List<BookNest.Core.Entities.Book>

<div class="book-row">
    @foreach (var item in Model)
    {
        <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id" class="book-card" style="display: block;">
            <div class="book-cover-container">
                @if (!string.IsNullOrEmpty(item.ImageUrl))
                {
                    <img src="~/uploads/books/@item.ImageUrl" class="book-cover" alt="@item.Title">
                }
                else
                {
                    <div class="book-cover" style="background: #eee; display: flex; align-items: center; justify-content: center; color: #aaa;">No Cover</div>
                }
                <div class="heart-icon">♥</div>
            </div>

            <div class="book-info">
                <div class="book-title">@item.Title</div>
                <div class="book-author">@(item.BookAuthors.FirstOrDefault()?.Author.FullName ?? "Unknown")</div>

                <div class="card-rating" style="display: flex; align-items: center; gap: 4px; font-size: 13px; margin-top: 5px;">
                    <span style="color: #FF9900; font-size: 15px;">★</span>
                    <strong style="color: var(--text-dark);">@item.AverageRating.ToString("0.0")</strong>
                    <span style="color: #A39683;">
                        @if(item.ReviewCount > 0)
                        {
                            <text>• @item.ReviewCount review@(item.ReviewCount != 1 ? "s" : "")</text>
                        }
                        else
                        {
                            <text>• New</text>
                        }
                    </span>
                </div>
            </div>
        </a>
    }
</div>