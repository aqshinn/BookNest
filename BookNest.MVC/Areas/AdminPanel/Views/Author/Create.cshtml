@model Author
@{
    ViewData["Title"] = "New Authors";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create New Author</h4>
            <form class="forms-sample" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FullName">Full Name</label>
                    <input asp-for="FullName" class="form-control" placeholder="For example: Nizami Ganjavi">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Biography">Biography</label>
                    <textarea asp-for="Biography" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Biography" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2">Create</button>
                <a asp-action="Index" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>