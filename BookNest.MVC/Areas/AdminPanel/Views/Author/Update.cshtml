@model Author
@{
    ViewData["Title"] = "Update Authors";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Author</h4>
            <form class="forms-sample" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="FullName">Full Name</label>
                    <input asp-for="FullName" class="form-control">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Biography">Biography</label>
                    <textarea asp-for="Biography" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Biography" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-warning me-2 text-white">Save</button>
                <a asp-action="Index" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>